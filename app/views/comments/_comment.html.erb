<% object.comments.each do |c| %>
    <h5> <%= c.user.fname %>
          <%= c.user.lname %>  </h5>
           >Posted <%= distance_of_time_in_words(object.created_at, c.created_at) %> ago
    <br>
    <%= c.content %> 
    
    <% if current_user.id == c.user_id %>
          <%= link_to comment_path(c), method: :delete, data: { confirm: "You sure?" } do %>
            <i class="fas fa-trash"></i>
          <% end %>
        <% end %>
    <br><br><%= render 'likes/like_comments', object: c %>

<%end%>