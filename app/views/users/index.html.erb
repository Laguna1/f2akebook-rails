<h4>Users#index</h4>

<h1>All Users</h1>
<% @users.each do |user| %>

  <%= link_to user_path(user) do %>
    <%= user.fname %> <%= user.lname %>
  <% end %>
  <% if current_user.id != user.id %>
    <%= link_to '#' do %>
      <button class="bnt btn-info">Send Friend Request?</button>
    <% end %>
  <% end %>
  <br><br>
<% end %>
